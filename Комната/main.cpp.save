#include "TXLib.h"

bool click(int x1, int y1, int x2, int y2){
    return (txMouseButtons() == 1 &&
            txMouseX() > x1 &&
            txMouseY() > y1 &&
            txMouseX() < x2 &&
            txMouseY() < y2);
}


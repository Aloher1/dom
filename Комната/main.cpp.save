struct BUTTON{
    const char* text;
    int x;
    int y;
    subBUTTON subButton[10];
    void draw(){
        txSetColor(TX_BLACK,3);
        txRectangle(x, y, x + 150, y + 50);

        if(txMouseX() >= x && txMouseX() <= x + 150 &&
           txMouseY() >= y && txMouseY() <= y + 50)
            txSetColor(TX_CYAN);
        txDrawText(x, y, x + 150, y + 50, text);

    }
};


